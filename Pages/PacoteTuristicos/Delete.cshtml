@page "{id:int?}"
@model AT_DWNBD.Pages.PacoteTuristicos.DeleteModel
@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir Pacote</h1>

<h3>Tem certeza de que deseja excluir este pacote?</h3>
<div>
    <h4>Pacote Turístico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico!.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico!.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico!.DataInicio)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico!.DataInicio.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico!.CapacidadeMaxima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico!.CapacidadeMaxima)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico!.Preco)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico!.Preco.ToString("C")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="PacoteTuristico.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar para a Lista</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}