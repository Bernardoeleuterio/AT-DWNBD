@page "{id:int}"
@model AT_DWNBD.Pages.PacoteTuristicos.DetailsModel 

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Pacote</h1>

<div>
    <h4>Pacote Turístico</h4>
    <hr />
    <dl class="row"> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.DataInicio)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico.DataInicio.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.CapacidadeMaxima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.CapacidadeMaxima)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.Preco)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico.Preco.ToString("C")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.ReservasRealizadas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.ReservasRealizadas)
        </dd>
        
    </dl> 
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PacoteTuristico.Id">Editar</a> |
    <a asp-page="./Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}