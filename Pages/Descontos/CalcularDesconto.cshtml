@page
@model AT_DWNBD.Pages.Descontos.CalcularDescontoModel
@{
    ViewData["Title"] = "Calcular Desconto";
}

<h1>@ViewData["Title"]</h1>

<p>Informe um preço para aplicar um desconto de 10%.</p>

<form method="post">
    <div class="form-group">
        <label for="PrecoOriginal">Preço Original:</label>
        <input type="number" step="0.01" class="form-control" id="PrecoOriginal" asp-for="PrecoOriginal" required />
        <span asp-validation-for="PrecoOriginal" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Calcular Desconto</button>
</form>

@if (Model.PrecoComDesconto > 0)
{
    <h2 class="mt-4">Resultado do Desconto</h2>
    <p>Preço Original: <strong>@Model.PrecoOriginal.ToString("C")</strong></p>
    <p>Preço com 10% de Desconto: <strong>@Model.PrecoComDesconto.ToString("C")</strong></p>
}